header.room-details-header-wrapper
  include ../header/header.pug
div.room-details-wrapper
  div.room-details-background
    img.room-details__img1(src="./src/modules/room-details/img/room-details-image1.jpg" alt="img")
    img.room-details__img2(src="./src/modules/room-details/img/room-details-image2.jpg" alt="img")
    img.room-details__img3(src="./src/modules/room-details/img/room-details-image3.jpg" alt="img")
div.room-details-info-top-wrapper
  main.room-details-info-top
    div.room-details-info-top__wrapper-room-details
      h2.room-details-info-top__title Сведения о номере
      div.room-details-block
        +room-details("src/modules/mixin-room-details/img/insert_emoticon.png", "Комфорт","Шумопоглощающие стены")
      div.room-details-block
        +room-details("src/modules/mixin-room-details/img/location_city.png", "Удобство","Окно в каждой из спален")
      div.room-details-block3
        +room-details("src/modules/mixin-room-details/img/whatshot.png", "Уют","Номер оснащён камином")
    div.room-details-info-top__wrapper-impressions-room
      h2.room-details-info-top__title.room-details-info__title-padding-left Впечатления от номера
      include ../impressions-room/impressions-room.pug
    div.room-details-info-top__wrapper-form-number-selection-total
      include ../form-number-selection-total/form-number-selection-total-copy.pug
  //main.room-details-info-bottom
    div.room-details-info-bottom__reviews-block
      div.room-details-info-bottom__title_padding-left
        h2.room-details-info-bottom__title Отзывы посетителей номера
        div.reviews__number-wrapper
          +number-reviews("2", "отзыва")
      div.room-details-info-bottom__reviews-block-grid
        div.reviews__wrapper
          +user-name-picture("src/modules/mixin-user-name-picture/img/image-user1.jpg", "Мурад Сарафанов","5 дней назад")
        div.reviews__like-wrapper
          +like-button("./src/modules/mixin-like-button/img/favorite.png", 12)
        div.reviews__text-wrapper
          +review("Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.")
      div.room-details-info-bottom__reviews-block-grid
        div.reviews__wrapper
          +user-name-picture("src/modules/mixin-user-name-picture/img/image-user2.jpg", "Патрисия Стёклышкова","Неделю назад")
        div.reviews__like-wrapper
          include ../mixin-like-button/faint-copy-like-button.pug
        div.reviews__text-wrapper
          +review("Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент")
    div.room-details-info-bottom__wrapper-bullet-list
      h2.room-details-info-bottom__title.room-details-info__title_bullet-list-padding-left Правила
      ul.wrapper-bullet-list
        +bullet-list("Нельзя с питомцами")(class="bullet-list bullet-list_padding-top")
        +bullet-list("Без вечеринок и мероприятий")(class="bullet-list bullet-list_padding-top")
        +bullet-list("Время прибытия — после 13:00, а выезд до 12:00")(class="bullet-list bullet-list_padding-top")
    div.room-details-info-bottom__wrapper-block-cancel
      h2.room-details-info-bottom__title.room-details-info-bottom__title_padding-bottom Отмена
      include ../block-cancel/block-cancel.pug
footer.room-details-navigation-footer-wrapper
  include ../navigation-footer/navigation-footer.pug
footer.room-details-footer-full-wrapper
  include ../footer-full/footer-full.pug